{
    "name": "Colify",
    "version": "1.0",
    "manifest_version" : 1;
    "description": "Colify..."
    "icons" : {"16": "colify_16.png",
                "48": "colify_48.png",
                "128": "colify_128.png" },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Colify",
        "default_icon": "colify_16.png"
    },
    "options_page": "options.html",
    "permissions":[
        "background",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}